#include <stdio.h>
#include <stdlib.h>

int main(){

    int n;

    printf ("Digite um numero: ");
    scanf ("%d", &n);

    if (n < 0){
        printf ("Numero negativo\n");
    }
    else if (n >= 0){
        printf ("Numero positivo\n");
    }
    if (n % 2 == 0){
        printf ("Numero par\n");
    }
    else if (n % 2 != 0){
        printf ("Numero impar\n");
    }

    return 0;
}
